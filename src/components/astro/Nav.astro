---
import logofondo from "../../assets/fondos/new_down.png";
import LogoblueWhite from "../../assets/Logos/logo_white2_2.png";
import butonMusic from "../../assets/menubotones/menu-btn-music_stop.png";
import logoBlack from "../../assets/Logos/logo_black2_2.png";
---

<nav class="fixed  bg-gray-50 z-50  w-screen overflow-hidden">
    <!-- Fondo con imágenes -->
    <div class="absolute inset-0 -z-10 ">
       <!-- <img src={logofondo.src} alt="fondo" class="w-full h-full object-cover" />  -->
      <!-- <img src={LogoblueWhite.src} alt="logo" class="w-50 h-full object-cover" /> -->
    </div>
  
    <!-- Contenido encima en 3 columnas -->
    <div class="grid 2xl:grid-cols-[400px_1fr_300px] xl:grid-cols-[250px_1fr_250px] lg:grid-cols-[150px_1fr_300px] md:grid-cols-[100px_1fr_250px] items-center z-10 relative p-4">
      <!-- Columna 1: logo -->
      <div class="flex justify-start">
        <img src={logoBlack.src} alt="logo" class="ml-4 w-auto sm:h-6 lg:h-7 xl:h-10" />
      </div>
  
      <!-- Columna 2: menú -->
      <div class="flex justify-center">
        <ul class="flex justify-center 2xl:gap-10 xl:gap-4 lg:gap-3 md:gap-2 gap-2 font-[TimesNewRoman] xl:text-[20px] lg:text-[15px] md:text-[12px] text-[10px]">
          <li id="0" class="hover:scale-110 transition-all duration-300 ease-in-out  cursor-pointer">Inicio</li>
          <li id="1" class="hover:scale-110 transition-all duration-300 ease-in-out  cursor-pointer">Lotería</li>
          <li id="2" class="hover:scale-110 transition-all duration-300 ease-in-out  cursor-pointer">Milestone</li>
          <li id="3" class="hover:scale-110 transition-all duration-300 ease-in-out  cursor-pointer">Nuevo</li>
          <li id="4" class="hover:scale-110 transition-all duration-300 ease-in-out  cursor-pointer">Clases</li>
          <li id="5" class="hover:scale-110 transition-all duration-300 ease-in-out  cursor-pointer">Contenido de Magna</li>
          <li id="6" class="hover:scale-110 transition-all duration-300 ease-in-out  cursor-pointer">Característica</li>
        </ul>
      </div>
  
      <!-- Columna 3: botones a la derecha -->
      <div class="flex justify-end items-center gap-4">
        <img src={butonMusic.src} alt="boton" class="w-auto h-8 hover:scale-110 transition-all duration-300 ease-in-out  cursor-pointer" />
        <button class="hover:scale-110 transition-all duration-300 ease-in-out  cursor-pointer px-5 py-1 border rounded-full 2xl:text-[14px] xl:text-[12px] lg:text-[12px] md:text-[12px] text-[10px] font-[TimesNewRoman]">Pre-Registro</button>
        <button class="hover:scale-110 transition-all duration-300 ease-in-out  cursor-pointer px-5 py-1 border rounded-full 2xl:text-[14px] xl:text-[12px] lg:text-[12px] md:text-[12px] text-[10px] font-[TimesNewRoman]">Ingresar</button>
      </div>
    </div>  
</nav>

<script>
    // Cargar el script de movimiento cuando el DOM esté listo
    document.addEventListener('DOMContentLoaded', () => {
        import('../react/Movimiento.js').then(module => {
            const cleanup = module.default();
            // Limpiar el event listener cuando el componente se desmonte
            window.addEventListener('beforeunload', () => {
                if (typeof cleanup === 'function') {
                    cleanup();
                }
            });
        });
    });
</script>

